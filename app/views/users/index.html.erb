<div class="container">
  <div class="row">
    <h2>ユーザー</h2>
      <% @users.each do |user| %>
      <div class="container-child col-md-4 col-sm-4 col-xs-6 user-block">
      <% if user.id != current_user.id %>
            <%= profile_img(user) %>
            <%= user.email %>
           <li>
              <div class="item">
                <%= link_to user.name, user %><br>
                <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
              </div>
              <%= render partial: 'follow_form', locals: { user: user } if signed_in? %>
           </li>
          <% end %>
      </div>
      <% end %>
  </div>
</div>
